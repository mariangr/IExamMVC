@model IExam.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<div style="background-image: url(../../Content/images/videoPlayerAndCommentsBackgrounf.png); webkit-border-radius: 20px; -moz-border-radius: 20px; border-radius: 20px;">
    <div class="container-fluid">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4>Create a new account.</h4>
            <hr />
            @Html.ValidationSummary()

            <div class="form-group">
                @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
                <div class="col-md-9">
                    @Html.EditorFor(m => m.UserName, new { @class = "form-control col-md-9" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
                <div class="col-md-9">
                    @Html.EditorFor(m => m.FirstName, new { @class = "form-control col-md-9" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
                <div class="col-md-9">
                    @Html.EditorFor(m => m.LastName, new { @class = "form-control col-md-9" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.FN, new { @class = "col-md-2 control-label" })
                <div class="col-md-9">
                    @Html.EditorFor(m => m.FN, new { @class = "form-control col-md-9" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.IdentityNumber, new { @class = "col-md-2 control-label" })
                <div class="col-md-9">
                    @Html.EditorFor(m => m.IdentityNumber, new { @class = "form-control col-md-9" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                <div class="col-md-9">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control col-md-9" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                <div class="col-md-9">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control col-md-9" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Register" />
                </div>
            </div>
        }
    </div>
</div>