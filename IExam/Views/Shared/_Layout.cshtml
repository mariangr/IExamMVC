<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Content-Type" content="text/html" charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/main.css" rel="stylesheet" />
    <link rel="WWW Icon" href="~/Content/images/exam-icon.gif" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/jquery-2.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/knockout-3.1.0.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <h2 class="col-md-5" id="pageTitle" style="color: white; margin-top: 10px;"><span class="glyphicon glyphicon-pencil"></span> @ViewBag.Title</h2>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container-fluid body-content" style="margin-top: 100px">
        <div class="row">
            <nav id="navigation" class="col-md-2 col-sm-2 col-xs-2" style="margin-top: 1%;">
                @Html.Partial("~/Views/Shared/_Navigation.cshtml")
            </nav>
            <div style="padding-top: 1%;" class="col-md-10 col-sm-10 col-xs-10">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>