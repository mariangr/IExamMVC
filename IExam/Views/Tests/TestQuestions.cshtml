@model IEnumerable<IExam.Models.Question>
@{
    ViewBag.Title = ViewBag.TestName;
}

@if(Model != null)
{ 
<div class="alert alert-info container-fluid">
    <label>Test: @ViewBag.TestName</label>

    <br>

    <div class="col-md-12">
        @foreach (var question in Model)
        {
            <form id="@("question" + question.QuestionID)">
                <label>@question.QuestionDescription</label><br>

                <input type="radio" id="@("answer" + question.QuestionID)" name="@("answer" + question.QuestionID)" value="1">@question.FirstAnswer<br>
                <input type="radio" id="@("answer" + question.QuestionID)" name="@("answer" + question.QuestionID)" value="2">@question.SecondAnswer<br>
                <input type="radio" id="@("answer" + question.QuestionID)" name="@("answer" + question.QuestionID)" value="3">@question.ThirdAnswer<br>
                <input type="radio" id="@("answer" + question.QuestionID)" name="@("answer" + question.QuestionID)" value="4">@question.FourthAnswer<br>
            </form>
            <br>
        }
        <input type="button" id="@Model.First().TestID" class="btn btn-info" onclick="" value="Submit" />
    </div>
</div>
}
else
{
    <div class="alert alert-danger">
        <h4>No questions in test: "@ViewBag.TestName"</h4>
    </div>
}

@Html.ActionLink("Back To Tests", "Tests", null, new {@class = "btn btn-warning" })