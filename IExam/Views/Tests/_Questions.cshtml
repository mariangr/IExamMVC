@model IEnumerable<IExam.Models.Question>

<div class="container-fluid">
    @if (Model.Count() > 0 && (Model.Count() != 1 || Model.First().QuestionID != -1))
    {
        <div style="overflow: auto">
            <table class="table table-hover table-responsive panel panel-info">
                <thead class="panel-heading">
                    <tr>
                        <td>
                            Question
                        </td>
                        <td>
                            First Answer
                        </td>
                        <td>
                            Second Answer
                        </td>
                        <td>
                            Third Answer
                        </td>
                        <td>
                            Fourth Answer
                        </td>
                        <td>
                            Answer
                        </td>
                        <td>
                            Delete Question
                        </td>
                    </tr>
                </thead>
                @foreach (var question in Model)
                {
                    <tr>
                        <td>
                            @question.QuestionDescription
                        </td>
                        <td>
                            @question.FirstAnswer
                        </td>
                        <td>
                            @question.SecondAnswer
                        </td>
                        <td>
                            @question.ThirdAnswer
                        </td>
                        <td>
                            @question.FourthAnswer
                        </td>
                        <td>
                            @question.Answer
                        </td>
                        <td>
                            <button type="button" class="btn btn-danger" onclick="IExamTestQuestion.PageLogic.DeleteQuestion(event, '@question.QuestionID', '@question.TestID')">Delete</button>
                        </td>
                    </tr>
                }
            </table>
        </div>
    }
    else
    {
        <div class="alert panel panel-danger">
            <p>No Questions</p>
        </div>
    }
</div>