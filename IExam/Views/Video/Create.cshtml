@model IExam.Models.Video

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<div class="col-md-10">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="table">
            <h4>Video</h4>
            <hr />
            @Html.ValidationSummary(true)
            <div class="container">
                @Html.Label("Name", new { @for = "name", @class = "col-md-12" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "col-sm-12 col-md-12" }, })
                    @Html.ValidationMessageFor(model => model.name)
                </div>

                @Html.Label("Link", new { @for = "link", @class = "col-md-12" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.link, new { htmlAttributes = new { @class = "col-sm-12 col-md-12" }, })
                    @Html.ValidationMessageFor(model => model.link)
                </div>
                <br>
                <div>
                    <div class="col-md-12">
                        <input type="submit" value="Create" onclick="manageLink()" class="btn btn-default" style="margin-top: 1%" />
                    </div>
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

    @if (Model != null && Model.ID == -1)
    {
        <script>alert("Video Exists!")</script>
    }
    @if (Model != null && Model.ID == -2)
{
    <script>alert("Unknown Server Error.")</script>
}@if (Model != null && Model.ID == -3)
    {
        <script>alert("Video Doesn't Exist.")</script>
    }
    

</div>