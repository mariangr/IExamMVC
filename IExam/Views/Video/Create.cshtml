@model IExam.Models.Video
<header>
    <script src="~/Scripts/PagesScript/Video/IExamVideoCreatePageScript.js"></script>
</header>

@{
    ViewBag.Title = "Add Video";
}
<div class="col-md-12">
    <div class="col-md-12" style="text-align: center; align-content:center">
        <div>
            <div class="alert col-md-12" id="divForMessages" style="display: none;">
            </div>
        </div>
    </div>

    <div class="col-md-12">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

    <div class="panel panel-success">
        @Html.ValidationSummary(true)
        <div class="row alert panel" style="margin: 0px;">
            <label for="name" class="col-md-12 text-center">Name</label>
            <div class="col-md-12">
                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "col-sm-12 col-md-12 form-control" }, })
                @Html.ValidationMessageFor(model => model.name)
            </div>
            <br>
            <label for="name" class="col-md-12 text-center">Link</label>
            <div class="col-md-12">
                @Html.EditorFor(model => model.link, new { htmlAttributes = new { @class = "col-sm-12 col-md-12 form-control" }, })
                @Html.ValidationMessageFor(model => model.link)
            </div>
            <br>
            <div>
                <div class="col-md-12">
                    <input type="submit" value="Create" onclick="IExamVideoCreate.PageLogic.manageLink()" class="btn btn-default" style="margin-top: 1%" />
                </div>
            </div>
        </div>
    </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-success" })
        </div>
    </div>
</div>


    @if (Model != null && Model.VideoID == -1)
    {
        <script>
            $('#divForMessages').addClass("alert-warning");
            $('#divForMessages').html('<h4>Video Exists!</h4>').fadeIn(1000).fadeOut(4000, function () { $('#divForMessages').removeClass("alert-warning"); });
        </script>
    }
    @if (Model != null && Model.VideoID == -2)
    {
        <script>
            $('#divForMessages').addClass("alert-danger");
            $('#divForMessages').html('<h4>Unknown Server Error.</h4>').fadeIn(1000).fadeOut(4000, function () { $('#divForMessages').removeClass("alert-danger"); });
        </script>
    }
    @if (Model != null && Model.VideoID == -3)
    {
        <script>
            $('#divForMessages').addClass("alert-warning");
            $('#divForMessages').html("<h4>Video Doesn't Exist On YouTube.</h4>").fadeIn(1000).fadeOut(4000, function () { $('#divForMessages').removeClass("alert-warning"); });
        </script>
    }
